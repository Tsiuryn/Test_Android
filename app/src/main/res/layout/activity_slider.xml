<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".slider.SliderActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vText"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/vSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:value="15"
        android:valueFrom="0"
        android:stepSize="3"
        android:valueTo="48"
        app:trackColorActive = "#FEE600"
        app:trackColorInactive = "#D6D6D6"
        app:thumbColor="#FEE600"
        app:thumbRadius="8dp"
        app:thumbStrokeColor="#FEE600"
        app:haloRadius="20dp"
        app:tickColorActive="#FEE600"
        app:tickColorInactive="#D6D6D6"
        android:visibility="visible" />

    <SeekBar
        android:id="@+id/vSlider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="15"
        android:valueFrom="0"
        android:valueTo="50"
        app:trackColorActive = "#FEE600"
        app:trackColorInactive = "#D6D6D6"
        app:thumbColor="#FEE600"
        app:thumbRadius="8dp"
        app:thumbStrokeColor="#FEE600"
        app:haloRadius="20dp"
        app:tickColorActive="#FEE600"
        app:tickColorInactive="#D6D6D6"
        android:visibility="visible" />




</androidx.appcompat.widget.LinearLayoutCompat>